<head>
    <link rel="stylesheet" href="signup.css">
</head>
<header>
    <h1><a href="/">E-Commerce</a></h1>    
</header>
<div>
    <div id="div">
        <h1>Create New Accuont</h1>
        <form method="post" action="/signup">
            <label for="fName">First Name : </label>
            <input placeholder="First Name" id="fName" name="firstName" required><br><br>
            <label for="lName">Last Name : </label>
            <input placeholder="Last Name" id="lName" name="lastName"><br><br>
            <label for="mobile">Contact No : </label>
            <input placeholder="Contact Number" id="mobile" name="mobile" required><br><br>
            <label for="email">E-mail : </label>
            <input type="email" placeholder="Email" id="email" name="email" required><br><br>
            <label for="password">Password : </label>
            <input placeholder="Password" id="password" name="password" type="password" minlength="8" required><br><br>
            <% if(name != ""){%>
                <h2><%= name %></h2>
            <%}%>
            <input id="button" type="submit" value="Create Account">
            <p>-------------------------------OR-------------------------------</p>
        </form>
        <h3>Already have account?</h3>
        <a href="/login"><button id="button1">Login</button></a>
    </div>
</div>