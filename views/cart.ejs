<head>
    <link rel="stylesheet" href="cart.css">
</head>
<header>
    <h1><a href="/">E-Commerce</a></h1>
    <div>
        <h2><a href="/profile">
            <% if(name != ""){%>
                <%= name %>
            <%}%>
            </a>
        </h2>
        <a href="/cart"><img src="cart.png" alt="" style="width: 20px; height: 20px; margin-right: 10px;">Cart</a>
        <a href="/logout"><img src="logout.png" alt="" style="width: 20px; height: 20px; margin-right: 10px; ">Logout</a>
    </div>
</header>
<div class="container">
    <% for(let i = 0; i < userCartData.length ; i++){ %>
        <div class="child">
            <img id="img" src="<%= userCartData[i].image %>" alt="">
            <h3 id="pName"><%= productItem[i].productName %></h3>
            <h2><b id="details"><%= productItem[i].price %></b></h2>
            <h3 id="pName">Quantity : <span id="qty"><%= userCartData[i].qty %></span></h3>
            <div id="divtest">
                <div>
                    <input type="button" class="button1" id="<%= userCartData[i].image %>" value="-" onclick=decrease(id)>
                    <input type="button" class="button2" id="<%= userCartData[i].image %>" value="+" onclick=increase(id)>
                </div>
                <input type="button" class="button3" id="<%= userCartData[i].image %>" value="Delete" onclick=deleteData(id)>
            </div>
        </div>
    <% } %>
</div>
<script src="cart.js"></script>